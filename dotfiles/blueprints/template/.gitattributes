# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for common text files
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.go text eol=lf
*.py text eol=lf
*.sh text eol=lf
*.css text eol=lf
*.html text eol=lf

# Mark binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
