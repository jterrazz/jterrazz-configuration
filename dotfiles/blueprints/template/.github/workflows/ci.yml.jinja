name: CI

on:
{% if project_type == 'library' %}
  push:
    branches: [main]
  pull_request:
    branches: [main]
{% else %}
  pull_request:
    branches: [main]
  workflow_call:
{% endif %}

permissions:
  contents: read

jobs:
  ci:
    name: CI
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
{% if language == 'typescript' %}
      - uses: pnpm/action-setup@v4
      - uses: actions/setup-node@v4
        with:
          node-version: "24"
          cache: "pnpm"
      - name: Install dependencies
        run: pnpm install --frozen-lockfile
      - name: Build
        run: pnpm build
      - name: Run tests
        run: pnpm test
      - name: Run linter
        run: pnpm lint
{% if project_type == 'library' %}
      - name: Verify package
        run: pnpm pack --dry-run
{% endif %}
{% elif language == 'go' %}
      - uses: actions/setup-go@v5
        with:
          go-version-file: "go.mod"
      - run: go build ./...
      - run: go test ./...
      - run: go vet ./...
{% endif %}
